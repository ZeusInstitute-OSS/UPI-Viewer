<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".AboutAppFragment">

    <TextView
        android:id="@+id/aboutAppText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="UPI Viewer App is a POS helper which allows users to make their old android phones into Point of Sale Machines."
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/sourceCodeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Source code:"
        android:textSize="16sp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/aboutAppText"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/sourceCodeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View on GitHub"
        app:layout_constraintTop_toBottomOf="@id/sourceCodeLabel"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/licenseLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="License: GPL v3"
        android:textSize="16sp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/sourceCodeButton"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/licenseButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View License"
        app:layout_constraintTop_toBottomOf="@id/licenseLabel"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/byLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="By:"
        android:textSize="16sp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/licenseButton"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/authorButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Souhrud Reddy"
        app:layout_constraintTop_toBottomOf="@id/byLabel"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>